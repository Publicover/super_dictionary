<center>
  <br />
  <div class="auth-page-top"></div>
  <h1>WELCOME TO THE SUPER DICTIONARY</h1>
  <br />

  <%= form_tag '/login', method: :post, class: "form-group" do %>
    <%= content_tag :div, class: "form-group" do %>
      <p><%= email_field_tag :email, nil, placeholder: "Email" %></p>
      <p><%= password_field_tag :password, nil, placeholder: "Password" %></p>
    <% end %>
      <p><%= submit_tag "Log in", class: "btn btn-secondary" %></p>
  <% end %>

</br>
<p>New here? <%= link_to 'Sign up', signup_path %>.</p>



</center>
