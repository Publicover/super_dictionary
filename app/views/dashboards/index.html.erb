<center>
  <!-- <%= image_tag 'https://s3.us-east-2.amazonaws.com/incubator-dash/thumbs_up_borat.jpeg' %> -->
  <div id="dict-slide" class="carousel slide" data-ride="carousel">
    <ol class="carousel-indicators">
      <li data-target="#dict-slide" data-slide-to="0" class="active"></li>
      <li data-target="#dict-slide" data-slide-to="1"></li>
      <li data-target="#dict-slide" data-slide-to="2"></li>
      <li data-target="#dict-slide" data-slide-to="3"></li>
    </ol>

    <div class="carousel-inner" role="listbox">
      <div class="carousel-item active">
        <%= image_tag("https://s3.us-east-2.amazonaws.com/super-dictionary/oxford_car.jpg",
                       alt: "First slide",
                       class: "d-block img-fluid") %>
        <div class="carousel-caption"><h3>OXFORD</h3><p>Losing the war of prescriptivism</p></div>
      </div>
      <div class="carousel-item">
        <%= image_tag('https://s3.us-east-2.amazonaws.com/super-dictionary/webster-car-2.jpg',
