<center>
  <p>
    <h2><%= @full_call.word.upcase %></h2>
  </p>
<div class="container">
  <div class="card-title">
    <div class="card card-default">
      <div class="card-header"><strong>Oxford Definition:</strong>
        <div>
          <%= form_for @full_call do |f| %>
            <%= f.hidden_field :oxford_vote %>
            <%= f.submit "VOTE OXFORD", class: "btn btn-outline-secondary btn-sm" %>
          <% end %>
        </div>
        </div>
      <div class="card-block"><%= @full_call.oxford_def %></div>

      <div class="card-header"><strong>Webster Definition:</strong>
        <div>
          <%= form_for @full_call do |f| %>
            <%= f.hidden_field :webster_vote %>
            <%= f.submit "VOTE WEBSTER", class: "btn btn-outline-secondary btn-sm" %>
          <% end %>
        </div>
      </div>
      <div class="card-block"><%= @full_call.webster_def %></div>

      <div class="card-header">
        <strong>Johnson Definition:</strong>
        <div>
          <%= form_for @full_call do |f| %>
            <%= f.hidden_field :johnson_vote %>
            <%= f.submit "VOTE JOHNSON", class: "btn btn-outline-secondary btn-sm" %>
          <% end %>
        </div>
      <div class="card-block"><%= @full_call.johnson_def %></div>

      <div class="card-header">
        <strong>Urban Definition:</strong>
          <div>
            <%= form_for @full_call do |f| %>
              <%= f.hidden_field :urban_vote %>
              <%= f.submit "VOTE URBAN", class: "btn btn-outline-secondary btn-sm" %>
            <% end %>
          </div>
        </div>
        <div class="card-block"><%= @full_call.urban_def %></div>
      </div>

    </div>
</br>
<p><%= link_to 'Make another word', root_path %></p>
<p><%= link_to 'See all words', full_calls_path %></p>
</center>



