<center>
<p>
  <div>
    <h2 id='full-call-heading'><%= @full_call.word.upcase %></h2>
    <div id='full-call-alert'></div>
  </div>
</p>


<div class="container">
  <div class="card-title">
    <div class="card card-default">
      <div class="card-header"><strong>Oxford Definition:</strong>
        <p>
        </p>
        <div>
          <%= button_to('VOTE OXFORD', { controller: 'full_calls',
                                         action: 'vote_oxford',
                                         method: :post,
                                         id: @full_call,
                                         remote: true },
                                       { class: "btn btn-outline-secondary btn-sm vote-btn" }) %>
        </div>
      </div>
    <div class="card-block"><% @full_call.oxford_def.gsub(/\[/, '').gsub(/\]/, '').split(/",/).each do |string| %>
    <li>
      <%= string.gsub(/"/, '') %>
      <% end %>
    </li></div>

    <div class="card-header"><strong>Webster Definition:</strong>
      <div>
         <%= button_to('VOTE WEBSTER', { controller: 'full_calls',
                                         action: 'vote_webster',
                                         method: :post,
                                         id: @full_call,
                                         remote: true },
                                       { class: "btn btn-outline-secondary btn-sm vote-btn" }) %>
      </div>
    </div>
    <div class="card-block"><% @full_call.webster_def.sub(/:/, '').delete('["]').split(/:/).each do |string| %>
      <li>
        <%= string.capitalize %>
        <% end %>
      </li>
    </div>

    <div class="card-header">
      <strong>Johnson Definition:</strong>
      <div>
          <%= button_to('VOTE JOHNSON', { controller: 'full_calls',
                                          action: 'vote_johnson',
                                          method: :post,
                                          id: @full_call,
                                          remote: true },
                                        { class: "btn btn-outline-secondary btn-sm vote-btn" }) %>
        </div>
      </div>
    <div class="card-block"><%= @full_call.johnson_def %></div>

    <div class="card-header">
      <strong>Urban Definition:</strong>
        <div>
          <%= button_to('VOTE URBAN', { controller: 'full_calls',
                                        action: 'vote_urban',
                                        method: :post,
                                        id: @full_call,
                                        remote: true },
                                      { class: "btn btn-outline-secondary btn-sm vote-btn" }) %>
        </div>
      </div>
    <div class="card-block"><% @full_call.urban_def.gsub('/', '').split(/",/).each do |string| %>
    <li>
      <%= "#{string.gsub('[', '').gsub(']', '').gsub('\"', '"').gsub('\n\n', ' ').gsub('\r\n', ' ').chomp('"').sub('"', '').capitalize}" %>
      <% end %>
    </li></div>
    </div>
  </div>
</br>
<p><%= link_to 'Make another word', root_path %></p>
<p><%= link_to 'See all words', full_calls_path %></p>
</center>



